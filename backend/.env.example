# Backend configuration for local development
# Copy to .env (these values work out of the box with docker-compose.yml)

# Database connection (PostgreSQL)
DATABASE_URL=postgres://gastos:gastos_dev_password@localhost:5432/gastos?sslmode=disable

# Server address
SERVER_ADDR=:8080

# Session settings
SESSION_COOKIE_NAME=gastos_session
SESSION_COOKIE_SECURE=false

# CORS - allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000

# Serve frontend static files (for local development)
STATIC_DIR=../frontend/registrar-movimiento

# n8n webhook (optional for local dev)
N8N_WEBHOOK_URL=
N8N_API_KEY=
